--Display the database by increasing price.
SELECT * from BakeShop ORDER BY price asc;

--What is the highest selling number of cookies? 
SELECT Max(Sales) "Highest Number of Cookies Sold" from BakeShop;

--What is the lowest selling number of cookies?
SELECT Min(Sales) "Lowest Number of Cookies Sold" from BakeShop;

--What is the average number of sales of cookies?
SELECT Avg(Sales) "Average Sales" FROM BakeShop;

--What are the top 5 sellers?
SELECT Tray_number,cookie, price, sales from BakeShop
ORDER BY sales desc
Limit 5
